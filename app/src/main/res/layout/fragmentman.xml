<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#68CFCACA"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="600dp"
        android:layout_height="286dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.439"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.012">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_azuman"

                android:layout_width="518dp"
                android:layout_height="72dp"

                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"

                android:background="@drawable/custom_buttonazuman"

                android:drawableLeft="@drawable/azuman_icon_minisize"
                android:paddingLeft="20dp"

                android:text="AZUMAN"
                android:textSize="50sp" />

            <Button
                android:id="@+id/button_rc"
                android:layout_width="518dp"
                android:layout_height="72dp"

                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/custom_buttonrc"

                android:drawableLeft="@drawable/reception_icon_minisize"
                android:gravity="center_horizontal"
                android:layoutMode="opticalBounds"

                android:paddingLeft="20dp"
                android:text="LẼ TÂN"
                android:textAlignment="center"
                android:textSize="50sp" />

            <Button
                android:id="@+id/button_hk"
                android:layout_width="518dp"
                android:layout_height="72dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/custom_buttonhk"

                android:drawableLeft="@drawable/hk_icon_minisize"
                android:gravity="center_horizontal"
                android:layoutMode="opticalBounds"

                android:paddingLeft="20dp"
                android:text="BUỒNG PHÒNG"
                android:textAlignment="center"
                android:textSize="50sp" />

            <Button
                android:id="@+id/button_kitchen"
                android:layout_width="518dp"
                android:layout_height="72dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/custom_buttonkitchen"

                android:drawableLeft="@drawable/chef_icon_minisize"
                android:gravity="center_horizontal"
                android:layoutMode="opticalBounds"

                android:paddingLeft="20dp"
                android:text="NHÀ HÀNG"
                android:textAlignment="center"
                android:textSize="50sp" />

            <Button
                android:id="@+id/button_mass"
                android:layout_width="518dp"
                android:layout_height="72dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"

                android:layout_marginBottom="5dp"

                android:background="@drawable/custom_buttonmassage"
                android:drawableLeft="@drawable/masage_icon_minisize"
                android:gravity="center_horizontal"

                android:layoutMode="opticalBounds"
                android:text="MASSAGE"
                android:textAlignment="center"
                android:textSize="50sp" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>