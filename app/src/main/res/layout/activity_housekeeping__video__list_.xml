<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE2E2">

    <TextView
        android:id="@+id/textView_HKTitleVideoList"
        android:text="RECEPTION/BASIC"
        android:textSize="55sp"

        android:layout_width="960dp"
        android:layout_height="108dp"
        android:textColor="#FDFCFC"

        android:lineSpacingExtra="14sp"
        android:shadowColor="#000000"
        android:shadowDx="20"
        android:shadowDy="20"
        android:shadowRadius="5"

        android:background="@drawable/hk_banner2"
        android:gravity="center"
        android:padding="10sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageView_HK_List_Back"
        android:layout_width="154dp"
        android:layout_height="94dp"

        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:background="@null"
        android:scaleType="fitCenter"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.027"
        app:srcCompat="@drawable/back" />

    <ImageButton
        android:id="@+id/imageView_HK_List_Home"
        android:layout_width="100dp"
        android:layout_height="80dp"

        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@null"
        android:scaleType="fitCenter"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03"
        app:srcCompat="@drawable/home_run" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <fragment
        android:id="@+id/fragment3"
        android:name="com.example.azeducationtoo.Fragment_ListVideo"
        android:layout_width="867dp"
        android:layout_height="458dp"
        android:layout_marginTop="16dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_HKTitleVideoList"
        app:layout_constraintVertical_bias="0.157" />


</androidx.constraintlayout.widget.ConstraintLayout>